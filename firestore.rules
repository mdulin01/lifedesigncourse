rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Workbook data â€” participants can read/write their own, instructor can read all
    match /workbooks/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.token.email in ['mdulin@gmail.com', 'jdulin07@gmail.com'];
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
